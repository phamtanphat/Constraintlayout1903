<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4E724E"
    tools:ignore="MissingConstraints"
    tools:context=".MainActivity">


    <android.support.constraint.Guideline
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="#f20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide1"
        android:id="@+id/textviewView1"
        android:textColor="#FFFF"
        android:textSize="40sp"
        android:text="View 1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#2493A7"
        app:layout_constraintLeft_toLeftOf="@id/guide1"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textviewView2"
        android:textColor="#FFFF"
        android:textSize="40sp"
        android:text="View 2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>